package services;

import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.net.Socket;

import data.Persona;


public class Client {
	
	private final int PORT = 1234;
	private final String HOST = "localhost";
	
	protected Socket s;
	protected ObjectInputStream ois;
	protected ObjectOutputStream oos;


	
	public void onClient(int idClient) throws ClassNotFoundException {
		
		try {
			
			s = new Socket(HOST, PORT);
			
			ois = new ObjectInputStream(s.getInputStream());
			oos = new ObjectOutputStream(s.getOutputStream());
			
			
			Persona persona = new Persona(idClient, "Camila", 21, "F");
			System.out.println("Client> send object" + persona);
			
			oos.writeObject(persona);
			
			System.out.println("Client> receive answers:"+(String)ois.readObject());
			
			ois.readObject();
			
			ois.close();
			oos.close();
					
			
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
	}
	

}
